@model ITOTicketManagementSystem.Models.Ticket

@{
    ViewData["Title"] = "Ticket Details";
}

<h2>@ViewData["Title"]</h2>
<hr />

<div>
    <h4>Ticket #@Model.Id</h4>
    <dl class="row">
        <dt class="col-sm-3">Title</dt>
        <dd class="col-sm-9">@Model.Title</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>

        <dt class="col-sm-3">Submitted By</dt>
        <dd class="col-sm-9">@(Model.Owner?.Email ?? "N/A")</dd>

        <dt class="col-sm-3">Created On</dt>
        <dd class="col-sm-9">@Model.CreatedDate.ToLocalTime().ToString("F")</dd>

        @if (!string.IsNullOrEmpty(Model.AttachmentPath))
        {
            <dt class="col-sm-3">Attachment</dt>
            <dd class="col-sm-9">
                <a href="~/attachments/@Model.AttachmentPath" target="_blank">View Attachment</a>
            </dd>
        }
    </dl>
</div>
<hr />

<div class="row">
    <div class="col-md-6">
        <h4>Comments</h4>
        <ul class="list-group">
            @foreach (var comment in Model.Comments.OrderBy(c => c.CreatedDate))
            {
                <li class="list-group-item">
                    <p>@comment.Content</p>
                    <small class="text-muted">
                        By: @comment.Author.Email on @comment.CreatedDate.ToLocalTime().ToString("g")
                    </small>
                </li>
            }
        </ul>
    </div>
    <div class="mt-4">
        <h5>Add a new comment</h5>
        <form asp-action="AddComment" method="post">
            <input type="hidden" name="ticketId" value="@Model.Id" />
            <div class="form-group">
                <textarea name="content" class="form-control" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary mt-2">Submit Comment</button>
        </form>
    </div>
    <div class="col-md-6">
        @if (User.IsInRole("Help Desk Team") || User.IsInRole("Admin"))
        {
            <hr />
            <h4>Manage Ticket</h4>
            <div class="card bg-light">
                <div class="card-body">
                    <form asp-action="UpdateStatus" method="post">
                        <input type="hidden" name="ticketId" value="@Model.Id" />
                        <div class="form-row align-items-end">
                            <div class="form-group col-md-6">
                                <label for="status">Change Status</label>
                                <select name="status" class="form-control" asp-items="Html.GetEnumSelectList<ITOTicketManagementSystem.Models.TicketStatus>()"></select>
                            </div>
                            <div class="form-group col-md-6">
                                <button type="submit" class="btn btn-success">Update Status</button>
                            </div>
                        </div>
                    </form>
                    <form asp-action="AssignToEngineering" method="post" class="mt-3">
                        <input type="hidden" name="ticketId" value="@Model.Id" />
                        <button type="submit" class="btn btn-warning">Assign to Engineering Team</button>
                    </form>
                </div>
            </div>
        }
        <ul class="list-group">
            @foreach (var historyItem in Model.History.OrderBy(h => h.ChangedDate))
            {
                <li class="list-group-item">
                    <p class="mb-0">
                        <strong>@historyItem.PropertyChanged</strong> was changed from
                        <strong>"@historyItem.OldValue"</strong> to <strong>"@historyItem.NewValue"</strong>.
                    </p>
                    <small class="text-muted">
                        By: @historyItem.User.Email on @historyItem.ChangedDate.ToLocalTime().ToString("g")
                    </small>
                </li>
            }
            @if (!Model.History.Any())
            {
                <li class="list-group-item">No changes have been logged for this ticket yet.</li>
            }
        </ul>
    </div>
</div>